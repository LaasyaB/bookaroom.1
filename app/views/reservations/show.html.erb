<%- model_class = Reservation -%>
<div class="page-header">
  <h1><%=t '.title', :default => Reservation %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:reserve_from) %></dt>
      <dd><pre class="prettyprint"><%= @reservation.reserve_from %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:reserve_upto) %></dt>
      <dd><pre class="prettyprint"><%= @reservation.reserve_upto %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:reservation_details) %></dt>
      <dd><pre class="prettyprint"><%= @reservation.reservation_details %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:status) %></dt>
      <dd><pre class="prettyprint"><%= @reservation.status %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              reservations_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_reservation_path(@reservation), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              reservation_path(@reservation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

