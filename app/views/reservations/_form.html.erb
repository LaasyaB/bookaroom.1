<%= form_for @reservation, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :reserve_from, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :reserve_from, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :reserve_upto, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :reserve_upto, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :reservation_details, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :reservation_details, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :status, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  reservations_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
