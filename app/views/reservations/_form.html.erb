<%= simple_form_for(@reservation) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :room %>
    <%= f.association :user %>
    <%= f.input :reserve_from %>
    <%= f.input :reserve_upto %>
    <%= f.input :reservation_details %>
    <%= f.input :status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
